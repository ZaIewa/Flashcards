<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.flashcards.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <TextField fx:id="leftField" />
         <Separator opacity="0.0" orientation="VERTICAL" prefHeight="200.0" />
         <TextField fx:id="rightField" />
      </children>
   </HBox>

   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label fx:id="leftLabel" />
            </children>
         </HBox>
         <Separator opacity="0.0" orientation="VERTICAL" prefHeight="200.0" />
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
               <Label fx:id="rightLabel" />
            </children>
         </HBox>
      </children>
   </HBox>

   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
          <Button onAction="#onSaveButtonClick" text="Save" />
         <Separator opacity="0.0" orientation="VERTICAL" prefHeight="200.0" />
         <Button layoutX="370.0" layoutY="48.0" onAction="#onShowButtonClick" text="Show" />
      </children>
   </HBox>
</VBox>
